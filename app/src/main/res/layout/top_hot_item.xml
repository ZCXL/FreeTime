<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="210.33dp">
    <ImageView
        android:id="@+id/top_hot_item_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/top_hot_detail_video"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">
        <TextView
            android:id="@+id/top_hot_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/top_hot_item_notify"
            android:layout_alignTop="@+id/top_hot_item_notify"
            android:layout_marginTop="-28dp"
            android:text="Movie description,Movie description,Movie description."
            android:textSize="13.33dp"
            android:textColor="@android:color/white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>
        <RelativeLayout
            android:id="@+id/top_hot_item_notify"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="13dp"
            android:background="@android:color/transparent">
            <ImageView
                android:id="@+id/top_hot_item_time_image"
                android:layout_width="18dp"
                android:layout_height="15.33dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/top_hot_time_button"/>
            <TextView
                android:id="@+id/top_hot_item_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/top_hot_item_time_image"
                android:text="02:11"
                android:layout_marginLeft="2.66dp"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                />
            <ImageView
                android:id="@+id/top_hot_item_sight_image"
                android:layout_width="18dp"
                android:layout_height="15.33dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/top_hot_item_time_text"
                android:layout_marginLeft="22.66dp"
                android:src="@drawable/top_hot_sight_button"/>
            <TextView
                android:id="@+id/top_hot_item_sight_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/top_hot_item_sight_image"
                android:text="89,112"
                android:layout_marginLeft="2.66dp"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                />
            <ImageView
                android:id="@+id/top_hot_item_comment_image"
                android:layout_width="18dp"
                android:layout_height="15.33dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/top_hot_item_sight_text"
                android:layout_marginLeft="22.66dp"
                android:src="@drawable/top_hot_comment_button"/>
            <TextView
                android:id="@+id/top_hot_item_comment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/top_hot_item_comment_image"
                android:text="23"
                android:layout_marginLeft="2.66dp"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                />


        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>