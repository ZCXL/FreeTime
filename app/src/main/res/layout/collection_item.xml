<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/item_left"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/mine_collect_video_frame"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="17.33dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/mine_collect_video_image"
                android:layout_width="120.66dp"
                android:layout_height="79.33dp"
                android:src="@drawable/top_hot_detail_video"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                />
            <RelativeLayout
                android:layout_width="120.66dp"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:alpha="0.3"
                android:layout_gravity="bottom" >
                <TextView
                    android:id="@+id/mine_collect_video_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:text="22:24"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    />
            </RelativeLayout>
        </FrameLayout>
        <!--video description-->
        <TextView
            android:id="@+id/mine_collect_video_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21.33dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/mine_collect_video_frame"
            android:textSize="13.33sp"
            android:textColor="#f137373b"
            android:paddingRight="10dp"
            android:text="Description of the video!Description of the video!"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/item_right"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:background="#ffe6282e">
        <TextView
            android:id="@+id/item_right_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="15sp"
            android:text="删除"
            android:textColor="@android:color/white" />
    </RelativeLayout>
</LinearLayout>