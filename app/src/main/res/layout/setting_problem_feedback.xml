<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <!--title bar-->
    <RelativeLayout
        android:id="@+id/setting_problem_feedback_title_bar"
        android:layout_width="fill_parent"
        android:layout_height="57dp"
        android:background="#f3f2f2"
        >
        <ImageView
            android:id="@+id/left_return_arrow"
            android:layout_width="12.66dp"
            android:layout_height="22dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="17.33dp"
            android:src="@drawable/left_return_arrow"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Feedback"
            android:textSize="16sp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#ffc6c5c5"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:textSize="48px"
        android:textColor="#888888"
        android:text="Your Feedback"
        />
    <EditText
        android:id="@+id/feedback_edit"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="14dp"
        android:textSize="13.33sp"
        android:textColor="#ff2f2f2f"
        android:gravity="center"
        android:hint="Each of your Suggestions are very important for us!Sincerely thank you for your feedback!"
        android:background="@drawable/setting_feedback_edit"

        />
    <Button
        android:id="@+id/feedback_confirm"
        android:layout_width="334dp"
        android:layout_height="44.33dp"
        android:layout_marginTop="35dp"
        android:layout_gravity="center_horizontal"
        android:text="Commit"
        android:textColor="#ffffff"
        android:background="#ffd42f2c"
        />

</LinearLayout>